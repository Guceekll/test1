# agent_app.py
from mcp_agent.core.fastagent import FastAgent
fast = FastAgent("Capture Interview Agent")

@fast.agent(
    name="interview_agent",
    instruction="你是一个专业的半导体设备故障采访助手……",
    model="gpt-4o-mini"   
)
async def interview_agent(): pass

@fast.agent(
    name="summary_agent",
    instruction="你是一个擅长总结对话的助手。",
    model="gpt-4o-mini"    
)
async def summary_agent(): pass

@fast.agent(
    name="title_agent",
    instruction="你是一个擅长命名的助手。",
    model="gpt-4o-mini"
)
async def title_agent(): pass
